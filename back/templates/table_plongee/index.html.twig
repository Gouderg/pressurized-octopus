{% extends "base.html.twig" %}

{% set page_title = 'Tables plong√©e' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('assets/css/table_plongee.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="main">
        <div class="table-part">
            <table>
                <thead>
                    <tr> 
                        <th> ID </th>
                        <th> Nom </th>
                    </tr>
                    
                </thead>

                <tbody>
                    {% for table in tablePlongee %}
                        <tr>
                            <td>{{ table.id }}</td>
                            <td>{{ table.nom }}</td>
                            <td><a class="btn" href="{{ path('table_edit', {id: table.id} ) }}"> ‚úèÔ∏è </a></td>
                            <td><a class="btn" href="{{ path('table_delete', {id: table.id} ) }}"> üóëÔ∏è </a></td>  
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> 
        
        <div class="create-part">
            {{ form_start(table_form)}}
            <form method="POST">
                <span class="create-title"> Nom: </span>
                    {{ form_widget(table_form.nom) }}
                    {{ form_errors(table_form.nom) }}
                    {{ form_widget(table_form.btnCreate) }}
            
                {{ form_rest(table_form)}}
            </form>
            {{ form_end(table_form)}}
        </div>
    </div>
{% endblock %}
